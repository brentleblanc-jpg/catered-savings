{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node server-production.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PORT": "3000"
      }
    }
  }
}
