{
  "name": "Catered Sales",
  "description": "Personalized weekly deals platform with email automation",
  "repository": "https://github.com/brentleblanc-jpg/catered-savings",
  "logo": "https://via.placeholder.com/150x150/ff7a59/ffffff?text=CS",
  "keywords": ["deals", "email-automation", "personalized", "mailchimp"],
  "stack": "heroku-20",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment",
      "value": "production"
    },
    "MAILCHIMP_API_KEY": {
      "description": "Mailchimp API Key",
      "required": true
    },
    "MAILCHIMP_SERVER_PREFIX": {
      "description": "Mailchimp Server Prefix",
      "value": "us13"
    },
    "MAILCHIMP_LIST_ID": {
      "description": "Mailchimp List ID",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT Secret for tokens",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ]
}
